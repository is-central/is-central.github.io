<script>
    // Client-side interaction
    const spotlight = document.getElementById("spotlight");
    const spotlightImg = document.getElementById(
        "spotlight-img",
    ) as HTMLImageElement;
    const spotlightName = document.getElementById("spotlight-name");
    const spotlightClass = document.getElementById("spotlight-class");
    const spotlightDesc = document.getElementById("spotlight-desc");
    const closeBtn = document.getElementById("close-spotlight");
    const btns = document.querySelectorAll(".char-btn");

    function showSpotlight(btn: Element) {
        const name = btn.getAttribute("data-name");
        const role = btn.getAttribute("data-role");
        const img = btn.getAttribute("data-img");

        // Retrieve HTML content from the hidden div
        const descEl = btn.querySelector(".desc-content");
        const descHtml = descEl ? descEl.innerHTML : "";

        if (
            !spotlight ||
            !spotlightImg ||
            !spotlightName ||
            !spotlightClass ||
            !spotlightDesc
        )
            return;

        if (img) spotlightImg.src = img;
        spotlightName.textContent = name;
        spotlightClass.textContent = role;
        spotlightDesc.innerHTML = descHtml; // Use innerHTML for Markdown

        spotlight.classList.remove("hidden");
        spotlight.classList.add("visible");
    }

    function hideSpotlight() {
        if (!spotlight) return;
        spotlight.classList.remove("visible");
        spotlight.classList.add("hidden");
    }

    btns.forEach((btn) => {
        // Click handling
        btn.addEventListener("click", (e) => {
            e.stopPropagation();
            showSpotlight(btn);
        });

        // Hover handling (Desktop only naturally)
        btn.addEventListener("mouseenter", () => {
            // Optional: Preload or minor effect
        });
    });

    closeBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        hideSpotlight();
    });

    // Close on click outside
    spotlight?.addEventListener("click", (e) => {
        if (e.target === spotlight) {
            hideSpotlight();
        }
    });

    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") hideSpotlight();
    });
</script>

