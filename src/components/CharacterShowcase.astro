---
import { marked } from "marked";

export interface Props {
    roster: {
        role: string;
        chars: string[];
    }[];
    featuredChars?: string[];
    basePath?: string;
    descriptions?: Record<string, string>;
}

const {
    roster,
    featuredChars = [],
    basePath = "",
    descriptions = {},
} = Astro.props;

const featuredSet = new Set(featuredChars);

const getDescHtml = async (name: string) => {
    let raw = "";
    if (descriptions[name]) {
        raw = descriptions[name];
    } else {
        // Default fallback logic
        raw = `This is a detailed description for **${name}**. It is a very capable operator for the *Integrated Strategies* mode (Mizuki & Caerula Arbor, etc). Use them wisely to overcome early game struggles. (Placeholder)`;
    }
    // marked.parse returns a Promise<string> if async: true, or string if async: false.
    // Types might confuse it, but await is generally safe or needed if marked is strict.
    // In newer marked versions, parse is synchronous by default unless async option is set.
    // However, keeping await ensures compatibility if marked is async.
    return await marked.parse(raw);
};
